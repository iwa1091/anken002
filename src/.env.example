APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# データベース接続情報 (Docker Compose の設定に合わせる)
DB_CONNECTION=mysql
DB_HOST=mysql         # Docker Compose のサービス名に合わせる
DB_PORT=3306
DB_DATABASE=laravel_db # Docker Compose の MYSQL_DATABASE に合わせる
DB_USERNAME=laravel_user # Docker Compose の MYSQL_USER に合わせる
DB_PASSWORD=laravel_pass # Docker Compose の MYSQL_PASSWORD に合わせる

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# メール設定 (MailHog の設定に合わせる)
MAIL_MAILER=smtp
MAIL_HOST=mailhog # MailHog のサービス名に合わせる
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ★★★ ここを修正：ローカル開発環境でのセッションクッキー問題を回避 ★★★
# ホスト名が localhost の場合、SESSION_DOMAIN は設定しない（コメントアウトする）
# SESSION_DOMAIN=null # もし存在したらコメントアウトしてください

# HTTPでアクセスする場合、SESSION_SECURE_COOKIE は false にする
SESSION_SECURE_COOKIE=false
